<div id="<%= dom_id book %>">
  <p>
    <strong><%= I18n.t('model.title') %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= I18n.t('model.memo') %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= I18n.t('model.author') %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= I18n.t('model.picture') %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
